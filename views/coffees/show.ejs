<!DOCTYPE html>
<html lang="en">
<%- include ('../partials/head.ejs') %>

    <body>
        <div class="container show">
            <%- include ('../partials/nav.ejs') %>
                <div class="row">
                    <div class="five columns">

                        <img src=" <%=coffee.img %>" alt="" />


                    </div>
                    <div class="seven columns">
                        <div class="twelve columns">
                            <h3>
                                <%= coffee.name %>
                                    <% if (coffee.favorite) { %>
                                        A favorite
                                        <% } %>
                            </h3>
                        </div>
                        <h5>
                            Roaster: <%= coffee.roaster %>
                        </h5>
                        <div id="price-grade">
                        <p>
                            <strong>Price</strong> <% for( let index=0; index < coffee.price; index++ ) { %>$<% } %>
                        </p>
                        <p>
                            <strong>Grade</strong> <%= coffee.grade %>
                        </p>
                    </div>
                        <div class="beans">

                            <figure><img src="/images/coffee-bean.png" alt="">
                                <figcaption>Whole Bean</figcaption>
                            </figure>
                            <figure class="ghost">
                            <img src="/images/coffee-bag-bw.png" alt="">
                            <figcaption>Ground</figcaption>
                        </figure>
                        </div>
                        <p>Tried at <%= coffee.where%>
                                <% if (coffee.address) { %>: <%=coffee.address%>
                                        <%}%>
                        </p>
                        <strong> <p>Tags</p> </strong>
                        <ul class="tags">
                            <% coffee.tags.forEach(tag=> { %>
                                <li>
                                    <%= tag %>
                                </li>
                                <% }) %>
                        </ul>
                        <p class="description">
                            <strong>Notes: </strong><%= coffee.description %>
                        </p>
                        <p><a href="/coffees/<%= coffee.id %>/edit">Edit this entry</a></p>
                        <form class="submit" action="">
                            <input type="submit" value="DELETE">
                        </form>
                    </div>
                </div>
        </div>
    </body>

</html>